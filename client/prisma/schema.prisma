generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["neon_auth", "public"]
}

model users_sync {
  id              String            @id
  name            String?
  email           String?
  created_at      DateTime?
  updated_at      DateTime?
  deleted_at      DateTime?
  raw_json        Json?
  garden_projects garden_projects[]

  @@schema("neon_auth")
}

model garden_projects {
  id         String     @id
  name       String     @db.VarChar(255)
  userId     String
  createdAt  DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime   @db.Timestamptz(6)
  beds       Json       @default("{}")
  shapes     Json       @default("{}")
  users_sync users_sync @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
  @@schema("public")
}

model zones {
  id       Int     @id @default(autoincrement())
  zone     String? @unique @db.VarChar(4)
  temp_min Int?
  temp_max Int?
  notes    String? @db.VarChar

  @@schema("public")
}
